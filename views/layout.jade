//- mixins
mixin navitems
	li(role="presentation"): a(role="menuitem",href="/") Home
	li(role="presentation"): a(role="menuitem",href="/about.html") About
	li(role="presentation"): a(role="menuitem",href="/estimate.html") Free Estimate

!!! 5
html
	head
		block head
			title #{title}
			// styles
			// link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Droid+Sans+Mono|Ubuntu:400,700',try='text/css')
			link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
			link(rel='stylesheet', href='/stylesheets/main.css')
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			meta(name='description', content='J & R Handyman Services in Orange County')
			link(rel='author', href='https://plus.google.com/u/1/110838921249868536327')
			// fav icon
	body
		//if lt IE 7
			p#chromeframe
				| Your browser is obsolete. 
				a(href='http://browsehappy.com/') Please upgrade to a different browser
				|  or 
				a(href='http://www.google.com/chromeframe/?redirect=true') Install Google Chrome Frame
				|  to experience this site.

		// header
		header
			section#global-nav
				nav
					.constrain
						button.btn.btn-mini(style="float:right",type="button") Contact Us
						//#contact-tab 
							a(href="/contactus",title="Contact Us")
								.visible-phone
									i.icon-inbox.icon-white
								span(style="margin-left:5px").hidden-phone Contact Us
						ul.bignav.hidden-phone
							mixin navitems
						.btn-group.tinynav.visible-phone
							button.btn.btn-inverse(role="button",data-toggle="dropdown",data-target="dropdown") 
								span.icon-bar
								span.icon-bar
								span.icon-bar
							// a.dropdown-toggle(id="dLabel",role="button",data-toggle="dropdown",data-target="#",href="#") Menu
								b.caret
							ul.dropdown-menu(role="menu",aria-labelledby="dLabel")
								mixin navitems
			
		#container
			.container
				// logo
				#logo-banner.constrain.clearfix
					h2.logo
						a(href="/",title="J & R Handyman") J & R Handyman

				// content		
				#content				
					block content

		// footer		
		block footer
		footer
			#footer-nav.text-center
				nav
					ul
						mixin navitems
			
			a(href="http://twitter.com/jnrhandyman", class="sb twitter") twitter
			a(href="https://www.facebook.com/jnrhandymancom", class="sb facebook") facebook
			a(href="https://plus.google.com/101002608316019553471", class="sb googleplus") google plus
			a(href="mailto:jnrhandymancom@gmail.com", class="sb email") email
		
		div.affix(data-spy="affix", data-offset-top="200") this is the bottom

		block scripts
			script(src='http://code.jquery.com/jquery.js')
			script(src='/javascripts/bootstrap.min.js')
			script(src='/javascripts/main.js')

